{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
    ],
    "outDir": "./assets/dist",
    "strict": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "removeComments": true,
    "rootDir": "./assets/scripts",
    "baseUrl": "./assets/scripts",
    "allowSyntheticDefaultImports": true,
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts"]
}
