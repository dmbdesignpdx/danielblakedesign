{
  "name": "daniel-blake-design",
  "version": "1.0.0",
  "description": "Daniel Blake is a front end web designer living in Portland, OR.",
  "homepage": "https://danielblake.design",
  "repository": "https://github.com/dmbdesignpdx/danielblakedesign.git",
  "author": "Daniel Blake <daniel@danielblake.design>",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "start": "run-p webpack:dev hugo:dev",
    "build": "run-s webpack:prod hugo:prod",
    "webpack:dev": "webpack --mode development --watch",
    "webpack:prod": "webpack --mode production",
    "hugo:prod": "hugo -e production --minify",
    "hugo:dev": "hugo server -p 3000",
    "lint": "eslint assets/scripts/**/*.ts",
    "size": "bundlesize",
    "clean": "rm -rf public resources",
    "fresh": "rm -rf node_modules && pnpm i"
  },
  "dependencies": {
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  },
  "devDependencies": {
    "@types/node": "^13.13.14",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "bundlesize": "^0.18.0",
    "eslint": "^5.16.0",
    "eslint-utils": "^1.4.3",
    "husky": "^4.2.5",
    "npm-run-all": "^4.1.5",
    "smooth-scroll": "^16.1.3",
    "ts-loader": "^6.2.2",
    "turntable-kit": "^0.7.1",
    "typescript": "^3.9.7"
  }
}
